<UserControl x:Class="CeleryInstaller.Pages.DownloadingPage"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:CeleryInstaller.Pages"
             mc:Ignorable="d" 
             HorizontalAlignment="Left" Width="750" Height="385"
             Loaded="UserControl_Loaded">
    <Grid Background="{StaticResource BackgroundBrush}">
        <TextBlock Foreground="{StaticResource ForegroundBrush}" 
                   Text="Downloading" FontSize="30"
                   HorizontalAlignment="Center" VerticalAlignment="Top"
                   Margin="80"/>
        <TextBlock x:Name="StatusBar" HorizontalAlignment="Center" VerticalAlignment="Bottom" Margin="50" 
                   Foreground="{StaticResource DarkForegroundBrush}" FontSize="13"/>
        <ProgressBar x:Name="ProgressBar" VerticalAlignment="Bottom" Margin="30" Height="10"/>
    </Grid>
</UserControl>
