<UserControl x:Class="CeleryInstaller.Pages.StartupPage"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:CeleryInstaller.Pages"
             mc:Ignorable="d" 
             HorizontalAlignment="Left" Width="750" Height="385"
             Loaded="UserControl_Loaded">
    <Grid Background="{StaticResource BackgroundBrush}">
        <Path x:Name="CeleryLogo"
                  Width="175" Height="175"
                  HorizontalAlignment="Left" VerticalAlignment="Center"
                  Margin="80,0,0,0"
                  Stretch="Uniform" Fill="{StaticResource HighlightBrush}" 
                  Data="{StaticResource CeleryLogo}"/>
        <TextBlock x:Name="WelcomeLabel" Text="Welcome to" Foreground="{StaticResource ForegroundBrush}" FontSize="30" 
                       HorizontalAlignment="Right" VerticalAlignment="Top"
                       Margin="0,80,60,0" FontWeight="Light"/>
        <TextBlock x:Name="CeleryInstallerLabel" Text="Celery Installer" Foreground="{StaticResource HighlightBrush}" FontSize="35" 
                       HorizontalAlignment="Right" VerticalAlignment="Top"
                       Margin="0,130,60,0" FontWeight="Medium"/>
    </Grid>
</UserControl>
